<Window x:Class="PL.Engineer.SelectTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="SelectTaskWindow" Height="450" Width="800">
    <Border Background="AntiqueWhite" >

        <Grid>
            <TextBlock Text="Select Task:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" FontWeight="UltraBold" Margin="10,10,0,0"/>
            <ListView ItemsSource="{Binding TasksList}" MouseDoubleClick="SelectTask" Margin="40,60,40,40" FontWeight="Bold"/>

    </Grid>
        </Border>
</Window>
